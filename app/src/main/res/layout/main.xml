<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.kviation.sample.orientation.MainActivity">


    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:id ="@+id/prog_x_accel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:max = "10000"
        android:progress="50"/>
    <TextView
        android:id="@+id/x_accel_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="X-Accel"/>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:id ="@+id/prog_y_accel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max = "10000"
        android:indeterminate="false"
        android:progress="50"/>

    <TextView
        android:id="@+id/y_accel_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Y-Accel"/>
    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:id ="@+id/prog_z_accel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max = "10000"
        android:indeterminate="false"
        android:progress="50"/>
    <TextView
        android:id="@+id/z_accel_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Z-Accel"/>



    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:id ="@+id/prog_net_accel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:max="10000"
        android:progress="50"/>

    <TextView
        android:id="@+id/net_accel_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Net-Accel"/>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:id ="@+id/prog_x_gyro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:max="10000"
        android:progress="50"/>


    <TextView
        android:id="@+id/x_gyro_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="X-Gyro"/>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:id ="@+id/prog_y_gyro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max = "10000"
        android:indeterminate="false"
        android:progress="50"/>

    <TextView
        android:id="@+id/y_gyro_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Y-Gyro"/>
    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:id ="@+id/prog_z_gyro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max = "10000"
        android:indeterminate="false"
        android:progress="50"/>

    <TextView
        android:id="@+id/z_gyro_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Z-Gyro"/>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:id ="@+id/prog_net_gyro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:max="10000"
        android:progress="50"/>

    <TextView
        android:id="@+id/net_gyro_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Net-Accel"/>

    <Button
        android:id="@+id/toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start/Stop"
        android:textSize="40sp"
        android:textColor="#0c0c0c"
        android:background="@color/colorPrimaryDark"/>

    <com.kviation.sample.orientation.AttitudeIndicator
        android:id="@+id/attitude_indicator"
        android:layout_width="150dp"
        android:layout_height="150dp"
        />




</LinearLayout>
